@model IEnumerable<GameStore.Domain.Entities.Category>

@Html.RouteLink("Домой", new
{
    controller = "Game",
    action = "List",
    categoryId = 0,
    page = 1
}, new
{
    @class = "btn btn-block btn-default btn-lg"
})

@foreach (var link in Model)
{
    @Html.RouteLink(link.Name.ToString(), new
{
    controller = "Game",
    action = "List",
    categoryId = link.CategoryId,
    page = 1
}, new
{
    @class = "btn btn-block btn-default btn-lg"
            + (link.Name == ViewBag.SelectedCategory ? " btn-primary" : "")
})
}